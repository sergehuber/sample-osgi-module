<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<bean id="shellCommands" class="org.jahia.modules.sample.osgi.ShellCommands" />
	<service id="shellCommandsService"
		interface="org.jahia.modules.sample.osgi.ShellCommands"
		ref="shellCommands">
        <service-properties>
            <entry key="osgi.command.scope">
                <value>sample</value>
            </entry>
            <entry key="osgi.command.function">
                <value>hello</value>
            </entry>
        </service-properties>
    </service>

</blueprint>
